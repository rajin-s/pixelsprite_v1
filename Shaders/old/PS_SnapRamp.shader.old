Shader "PixelSprite/World Grid Snap (Ramped)"
{
	Properties
	{
		_MainTex ("Texture", 2D) = "white" {}
		_GridSize ("Grid Size", Float) = 0.125
		_PaletteTex  ("Palette", 2D) = "white" {}
	}
	SubShader
	{
		Tags
		{
			"RenderType"="Transparent"
			"DisableBatching"="True"
			"PreviewType" = "Plane"
		}

		Cull Off
		ZWrite Off
		Blend SrcAlpha OneMinusSrcAlpha

		Pass
		{
			CGPROGRAM
			#pragma vertex vert
			#pragma fragment frag
			
			#include "PS_Common.cginc"

			struct appdata
			{
				float4 vertex : POSITION;
				float2 uv : TEXCOORD0;
				fixed4 color : COLOR;
			};

			struct v2f
			{
				float2 uv : TEXCOORD0;
				float4 vertex : SV_POSITION;
				fixed4 color : COLOR;
			};

			sampler2D _MainTex;
			float4 _MainTex_ST;
			float _GridSize;
			sampler2D _PaletteTex;
			float4 _PaletteTex_TexelSize;

			v2f vert (appdata IN)
			{
				v2f OUT;
				
				OUT.vertex = WorldClampedClipSpace(IN.vertex, _GridSize);

				OUT.uv = IN.uv;
				OUT.color = IN.color;
				return OUT;
			}
			
			fixed4 frag (v2f IN) : SV_Target
			{
				fixed4 col = tex2D(_MainTex, IN.uv);
				col = col * IN.color;
				col.rgb = GetLUTColor(col, _PaletteTex, _PaletteTex_TexelSize.z / _PaletteTex_TexelSize.w);
				return col;
			}
			ENDCG
		}
	}
}
